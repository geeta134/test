<%= form_with model: from do |form| %>
  <div>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name %><br>
    <%= form.text_area :last_name %><br>
  </div>

   <div>
    <%= form.label :address %><br>
    <%= form.text_area :address %><br>
  </div>

   <div>
    <%= form.label :mobile_no %><br>
    <%= form.text_area :mobile_no %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>